{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "allowJs": true,
        "target": "ES2020",
        "module": "ESNext",
        "strict": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "types": ["vitest"]
    },
    "exclude": ["tests/**/*", "node_modules"]
}
