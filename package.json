{
    "name": "@abullard/akio",
    "description": "Quickly retrieve forgotten package.json script commands",
    "version": "1.2.2",
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "packge.json"
    ],
    "keywords": [
        "cli",
        "command-line",
        "productivity",
        "developer-tools",
        "javascript",
        "typescript",
        "package-json",
        "script-runner",
        "terminal",
        "monorepo",
        "pnpm",
        "workspace-tools",
        "command-discovery",
        "akio",
        "dx",
        "npm-workspaces",
        "yarn-workspaces"
    ],
    "main": "./src/index.ts",
    "type": "module",
    "module": "dist/index.js",
    "bin": "./dist/index.cjs",
    "author": "abullard",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abullard/akio.git"
    },
    "devDependencies": {
        "@types/command-line-args": "^5.2.3",
        "@types/command-line-usage": "^5.0.4",
        "@types/node": "^25.0.9",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-unused-imports": "^4.3.0",
        "execa": "^9.6.0",
        "typescript-eslint": "^8.53.0",
        "vitest": "^3.1.4"
    },
    "dependencies": {
        "command-line-args": "^6.0.1",
        "command-line-usage": "^7.0.3",
        "glob": "^13.0.0"
    },
    "scripts": {
        "akio": "node ./dist/index.cjs",
        "test": "vitest run",
        "test:update": "vitest run --update",
        "test:stub": "node -e \"console.log('text')\"",
        "build:prod": "npx esbuild ./src/index.ts --bundle --platform=node --minify --format=cjs --outfile=./dist/index.cjs",
        "build:debug": "npx esbuild ./src/index.ts --bundle --platform=node --format=cjs --outfile=./dist/index.cjs",
        "clean": "rm -rf ./dist ./node_modules",
        "lint": "eslint .",
        "ui": "pnpm --filter ui",
        "api": "pnpm --filter api"
    },
    "scriptDescriptions": {
        "akio": "DO NOT REMOVE - used for snapshot tests to run local build",
        "run:local": "runs a local build of akio",
        "test": "run vitest tests",
        "test:update": "run vitest & update snapshot tests",
        "test:stub": "DO NOT REMOVE - stubbed npm script for snapshot tests",
        "build:prod": "This command builds akio",
        "build:debug": "Builds akio w/o minification, provides stack traces in error output",
        "clean": "Remove build & dependencies from local",
        "lint": "Run eslint",
        "ui": "pnpm ui package script passthrough",
        "api": "pnpm api package script passthrough"
    }
}
