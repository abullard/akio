{
  "name": "@abullard/akio",
  "version": "1.1.0",
  "bin": "./dist/index.cjs",
  "type": "module",
  "description": "Quickly retrieve forgotten package.json script commands",
  "main": "./src/index.ts",
  "scripts": {
    "run:local": "node ./dist/index.cjs",
    "test": "vitest run",
    "test:stub": "node -e \"console.log('text')\"",
    "build:real": "npx esbuild ./src/index.ts --bundle --platform=node --format=cjs --outfile=./dist/index.cjs",
    "ui": "pnpm --filter ui",
    "api": "pnpm --filter api"
  },
  "scriptDescriptions": {
    "run:local": "runs a local build of akio",
    "test": "run vitest unit tests",
    "test:stub": "DO NOT REMOVE - stubbed npm script for snapshot tests",
    "build:real": "This command builds Akio",
    "ui": "pnpm ui package script passthrough",
    "api": "pnpm api package script passthrough"
  },
  "author": "abullard",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abullard/akio.git"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "esbuild": "^0.25.4",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}