{
  "name": "@abullard/akio",
  "version": "1.0.0",
  "bin": "./dist/index.cjs",
  "type": "module",
  "description": "Quickly retrieve forgotten package.json script commands",
  "main": "./src/index.ts",
  "scripts": {
    "test:real": "vitest",
    "test:unit": "vitest run --include src/**/*.unit.spec.ts",
    "test:int": "vitest run --include src/**/*.int.spec.ts",
    "test:contract": "vitest run --include src/**/*.contract.spec.ts",
    "test:watch": "vitest",
    "build:real": "npx esbuild ./src/index.ts --bundle --platform=node --format=cjs --outfile=./dist/index.cjs",
    "build:dev": "tsc --watch",
    "build:prod": "vite build",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "akio": "npx akio"
  },
  "scriptDescriptions": {
    "test:real": "**REAL: run vitest unit tests",
    "test:int": "run integration tests",
    "test:contract": "run API contract tests",
    "test:watch": "watch tests and re-run on save",
    "test:unit": "run unit tests",
    "build:real": "** REAL: create production build at ./dist with esbuild",
    "build:dev": "local dev build",
    "build:prod": " build production fake",
    "start": "start the http server",
    "start:dev": "start dev server",
    "start:prod": "start prod server"
  },
  "author": "abullard",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.21",
    "esbuild": "^0.25.4",
    "vitest": "^3.1.4"
  }
}